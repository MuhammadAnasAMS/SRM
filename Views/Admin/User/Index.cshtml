@model PIA_Admin_Dashboard.Models.User

<tr style="border-bottom: 1px solid #ccc;">
    <td style="display: flex; align-items: center; gap: 15px; padding: 10px;">
        <img src="https://www.w3schools.com/howto/img_avatar.png"
             alt="User Photo"
             style="width: 45px; height: 45px; border-radius: 50%; object-fit: cover;" />

        <div>
            <div style="font-weight: 600;">@Model.Name</div>
            <div style="color: gray; font-size: 13px;">@Model.Email</div>
        </div>
    </td>

    <td style="padding: 10px; vertical-align: middle;">
        @Model.Role
    </td>

    <td style="padding: 10px; vertical-align: middle;">
        @if (Model.IsActive)
        {
            <span style="color: green;">Active</span>
        }
        else
        {
            <span style="color: red;">Inactive</span>
        }
    </td>

    <td style="padding: 10px; vertical-align: middle;">
        <a href="@Url.Action("Details", "User", new { id = Model.Id })" class="btn btn-sm" style="background-color: #1d3c34; color: white; margin-right: 5px;">
            <i class="fas fa-eye"></i> View
        </a>

        <a href="@Url.Action("History", "User", new { id = Model.Id })" class="btn btn-sm" style="background-color: #1d3c34; color: white;">
            <i class="fas fa-history"></i> History
        </a>
    </td>
</tr>
