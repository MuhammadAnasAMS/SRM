@model PIA_Admin_Dashboard.Models.Agent

<tr style="border-bottom: 1px solid #ddd;">
    <td>
        <a href="@Url.Action("Details", "Agent", new { id = Model.AgentId })"
           style="display: flex; align-items: center; gap: 12px; text-decoration: none; color: inherit;">
            <img src="https://www.w3schools.com/howto/img_avatar.png"
                 alt="Profile"
                 style="width: 42px; height: 42px; border-radius: 50%; object-fit: cover; border: 2px solid #1d3c34;" />
            <div style="line-height: 1.2;">
                <strong>@Model.Name</strong><br />
                <small style="color: gray;">@Model.Email</small>
            </div>
        </a>
    </td>

    <td>
        <span class="badge @(Model.Status?.ToLower() == "active" ? "badge-success" : "badge-danger")">
            @(Model.Status?.ToLower() == "active" ? "Active" : "Inactive")
        </span>
    </td>

    <td>@Model.UserType</td>

    <td>@Model.WorkArea</td>

    <td>
        <a href="@Url.Action("Details", "Agent", new { id = Model.AgentId })"
           class="btn btn-sm btn-outline-primary">
            View
        </a>
    </td>
</tr>
