<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - PIA Service Request Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --pia-green: #0a6b42;
            --pia-dark-green: #034c2e;
            --pia-light-green: #10b965;
            --pia-gold: #d4af37;
            --sidebar-width: 280px;
            --sidebar-collapsed: 80px;
        }

        html, body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            height: 100%;
            overflow-x: hidden;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        }

        .wrapper {
            display: flex;
            min-height: 100vh;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-5px) rotate(5deg);
            }
        }

        /* Enhanced Modern Sidebar */
        aside.main-sidebar {
            width: var(--sidebar-width);
            background: linear-gradient(180deg, var(--pia-dark-green) 0%, var(--pia-green) 100%);
            color: #fff;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            overflow: hidden;
            position: relative;
            box-shadow: 0 0 40px rgba(3, 76, 46, 0.2);
            z-index: 1000;
        }

            aside.main-sidebar::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(45deg, transparent 49%, rgba(255,255,255,0.03) 50%, transparent 51%), linear-gradient(-45deg, transparent 49%, rgba(255,255,255,0.03) 50%, transparent 51%);
                background-size: 20px 20px;
                pointer-events: none;
                opacity: 0.5;
            }

            aside.main-sidebar.collapsed {
                width: var(--sidebar-collapsed);
            }

        .sidebar-toggle-btn {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            color: #fff;
            font-size: 18px;
            cursor: pointer;
            width: 50px;
            height: 50px;
            margin: 15px auto;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            flex-shrink: 0;
        }

            .sidebar-toggle-btn:hover {
                background: var(--pia-gold);
                transform: scale(1.05);
                box-shadow: 0 8px 25px rgba(212, 175, 55, 0.3);
            }

        .brand-link {
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(15px);
            color: #fff;
            text-decoration: none;
            padding: 20px;
            font-weight: 700;
            font-size: 22px;
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            margin: 0 15px 20px 15px;
            border-radius: 16px;
            position: relative;
            overflow: hidden;
            min-height: 60px;
        }

            .brand-link::after {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
                transition: left 0.6s;
            }

            .brand-link:hover::after {
                left: 100%;
            }

            .brand-link:hover {
                background: rgba(212, 175, 55, 0.25);
                color: var(--pia-gold);
                transform: translateY(-2px);
                box-shadow: 0 12px 35px rgba(212, 175, 55, 0.2);
            }

        .airplane-icon {
            font-size: 26px;
            margin-right: 12px;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            transform: rotate(0deg);
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 30px;
            height: 30px;
        }

        .brand-text {
            transition: all 0.4s ease;
            font-weight: 700;
            white-space: nowrap;
            overflow: hidden;
        }

        /* Fixed airplane icon positioning for collapsed state */
        aside.main-sidebar.collapsed .brand-link {
            padding: 15px;
            justify-content: center;
        }

        aside.main-sidebar.collapsed .airplane-icon {
            margin-right: 0;
            font-size: 28px;
            transform: rotate(-90deg);
            min-width: 40px;
            height: 40px;
            position: relative;
        }

        aside.main-sidebar.collapsed .brand-text {
            opacity: 0;
            transform: translateX(-20px);
            pointer-events: none;
            width: 0;
            margin: 0;
            overflow: hidden;
        }

        /* Modern Navigation */
        .sidebar nav ul {
            list-style: none;
            padding: 0 15px;
            margin: 0;
        }

        .sidebar nav li {
            margin-bottom: 8px;
        }

        .sidebar nav a {
            display: flex;
            align-items: center;
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            padding: 16px 20px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border-radius: 14px;
            position: relative;
            font-weight: 500;
            font-size: 15px;
            backdrop-filter: blur(5px);
        }

            .sidebar nav a::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                bottom: 0;
                width: 4px;
                background: var(--pia-gold);
                border-radius: 0 4px 4px 0;
                transform: scaleY(0);
                transition: transform 0.3s ease;
            }

            .sidebar nav a:hover::before,
            .sidebar nav a.active::before {
                transform: scaleY(1);
            }

            .sidebar nav a:hover {
                background: rgba(255, 255, 255, 0.15);
                color: #fff;
                transform: translateX(4px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            }

            .sidebar nav a.active {
                background: linear-gradient(135deg, var(--pia-gold), #b8941f);
                color: #fff;
                box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
            }

        /* Ensure consistent icon alignment for all navigation items */
        .sidebar nav i {
            margin-right: 12px;
            font-size: 18px;
            min-width: 24px;
            width: 24px;
            height: 24px;
            text-align: center;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .sidebar nav a:hover i {
            transform: scale(1.1);
            color: var(--pia-gold);
        }

        .sidebar nav a.active i {
            color: #fff;
        }

        /* Collapsed State - Fixed for consistent icon alignment */
        aside.main-sidebar.collapsed .sidebar nav a {
            justify-content: center;
            padding: 16px 12px;
            position: relative;
        }

        aside.main-sidebar.collapsed .sidebar nav i {
            margin-right: 0;
            font-size: 20px;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        aside.main-sidebar.collapsed .sidebar nav a span {
            opacity: 0;
            transform: translateX(-20px);
            pointer-events: none;
            transition: all 0.3s ease;
            position: absolute;
            width: 0;
            overflow: hidden;
        }

        /* Enhanced Tooltips with better positioning */
        aside.main-sidebar.collapsed .sidebar nav a:hover::after {
            content: attr(data-tooltip);
            position: absolute;
            left: calc(100% + 15px);
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.9);
            color: #fff;
            padding: 10px 15px;
            border-radius: 8px;
            white-space: nowrap;
            font-size: 14px;
            font-weight: 500;
            z-index: 1000;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            pointer-events: none;
        }

        /* Add arrow to tooltip */
        aside.main-sidebar.collapsed .sidebar nav a:hover::before {
            content: '';
            position: absolute;
            left: calc(100% + 8px);
            top: 50%;
            transform: translateY(-50%);
            width: 0;
            height: 0;
            border-top: 6px solid transparent;
            border-bottom: 6px solid transparent;
            border-right: 6px solid rgba(0, 0, 0, 0.9);
            z-index: 1001;
            pointer-events: none;
        }

        /* Enhanced Header */
        .main-header {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            padding: 25px 40px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            border-radius: 0 0 20px 20px;
            backdrop-filter: blur(10px);
        }

        .header-title {
            font-weight: 700;
            color: var(--pia-dark-green);
            font-size: 28px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

            .header-title i {
                color: var(--pia-gold);
                font-size: 32px;
            }

        .navbar-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .profile-img {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--pia-gold);
            transition: all 0.3s ease;
        }

            .profile-img:hover {
                transform: scale(1.1);
                border-color: var(--pia-green);
            }

        .btn-theme {
            background: linear-gradient(135deg, var(--pia-green), var(--pia-light-green));
            color: #fff;
            border: none;
            padding: 12px 24px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .btn-theme:hover {
                background: linear-gradient(135deg, var(--pia-dark-green), var(--pia-green));
                color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(10, 107, 66, 0.3);
            }

        .content-wrapper {
            flex: 1;
            padding: 30px;
            transition: all 0.4s ease;
        }

        .content-inner {
            width: 100%;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Enhanced Cards */
        .card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            padding: 35px;
            margin-bottom: 30px;
            transition: all 0.4s ease;
            border: 1px solid rgba(0, 0, 0, 0.05);
            position: relative;
            overflow: hidden;
        }

            .card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--pia-green), var(--pia-gold));
            }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
            }

        .card-header {
            font-size: 24px;
            font-weight: 700;
            color: var(--pia-dark-green);
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 15px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f1f5f9;
        }

        /* Modern Table Styling */
        .card-table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            background: #fff;
        }

            .card-table thead {
                background: linear-gradient(135deg, var(--pia-green), var(--pia-light-green));
            }

            .card-table th {
                color: #fff;
                font-weight: 600;
                padding: 20px 25px;
                text-align: left;
                font-size: 14px;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .card-table td {
                padding: 20px 25px;
                border-bottom: 1px solid #f1f5f9;
                transition: all 0.3s ease;
                font-weight: 500;
            }

            .card-table tbody tr {
                transition: all 0.3s ease;
            }

                .card-table tbody tr:hover {
                    background: linear-gradient(135deg, #f8fafc, #f1f5f9);
                    transform: scale(1.01);
                    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
                }

                .card-table tbody tr:last-child td {
                    border-bottom: none;
                }

        /* Search Bar Enhancement */
        .search-container {
            background: #fff;
            border-radius: 16px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .search-input {
            width: 100%;
            padding: 15px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 16px;
            transition: all 0.3s ease;
            background: #f8fafc;
        }

            .search-input:focus {
                outline: none;
                border-color: var(--pia-green);
                background: #fff;
                box-shadow: 0 0 0 3px rgba(10, 107, 66, 0.1);
            }

        .action-icons i {
            color: var(--pia-green);
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s ease;
            padding: 8px;
            border-radius: 8px;
            margin: 0 4px;
        }

            .action-icons i:hover {
                transform: scale(1.2);
                background: rgba(10, 107, 66, 0.1);
                color: var(--pia-dark-green);
            }

        .btn-primary {
            background: linear-gradient(135deg, #007BFF, #0056b3);
            color: #fff;
            border: none;
            padding: 12px 24px;
            font-weight: 600;
            border-radius: 12px;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #0056b3, #004085);
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0, 123, 255, 0.3);
            }

        /* Responsive Design */
        @@media (max-width: 768px) {
            aside.main-sidebar {
                width: var(--sidebar-collapsed);
            }

            .content-wrapper {
                padding: 20px;
            }

            .main-header {
                padding: 20px;
            }

            .header-title {
                font-size: 22px;
            }
        }

        /* Animation Classes */
        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <aside class="main-sidebar" id="mainSidebar">
            <button class="sidebar-toggle-btn" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>

            <a href="@Url.Action("Dashboard", "Admin")" class="brand-link">
                <i class="fas fa-plane airplane-icon"></i>
                <span class="brand-text">PIA SRC</span>
            </a>

            <div class="sidebar">
                <nav>
                    <ul>
                        <li>
                            <a href="@Url.Action("Index", "Program")" class="nav-link @(ViewBag.ScreenTitle == "Program Management" ? "active" : "")" data-tooltip="Programs">
                                <i class="fas fa-building"></i> <span>Programs</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Agent")" class="nav-link @(ViewBag.ScreenTitle == "Agent Management" ? "active" : "")" data-tooltip="Users">
                                <i class="fas fa-users"></i> <span>Users</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "WorkArea")" class="nav-link @(ViewBag.ScreenTitle == "Work Area Management" ? "active" : "")" data-tooltip="Work Areas">
                                <i class="fas fa-map-marker-alt"></i> <span>Work Areas</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Groups")" class="nav-link @(ViewBag.ScreenTitle == "Groups Management" ? "active" : "")" data-tooltip="Groups">
                                <i class="fas fa-user-friends"></i> <span>Groups</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ComplaintsLog", "Complaints")" class="nav-link @(ViewBag.ScreenTitle == "Complaints Handling" ? "active" : "")" data-tooltip="Complaints">
                                <i class="fas fa-comment"></i> <span>Complaints</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Logs", "Admin")" class="nav-link @(ViewBag.ScreenTitle == "System Logs" ? "active" : "")" data-tooltip="Logs">
                                <i class="fas fa-file-alt"></i> <span>Logs</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <div class="content-inner">
                <div class="main-header">
                    <div class="header-title">
                        @{
                            string screenTitle = ViewBag.ScreenTitle != null ? ViewBag.ScreenTitle.ToString() : "";
                            string iconClass = "fas fa-tachometer-alt"; // default

                            switch (screenTitle)
                            {
                                case "Dashboard":
                                    iconClass = "fas fa-tachometer-alt";
                                    break;
                                case "Service Request Dashboard":
                                case "Service Request Management":
                                    iconClass = "fas fa-headset";
                                    break;
                                case "Programs Management":
                                    iconClass = "fas fa-building";
                                    break;
                                case "Agent Management":
                                    iconClass = "fas fa-users";
                                    break;
                                case "Work Area Management":
                                    iconClass = "fas fa-map-marker-alt";
                                    break;
                                case "Manage Groups":
                                    iconClass = "fas fa-user-friends";
                                    break;
                                case "Complaints Log":
                                    iconClass = "fas fa-comment";
                                    break;
                                case "System Logs":
                                    iconClass = "fas fa-file-alt";
                                    break;
                                default:
                                    iconClass = "fas fa-cog";
                                    break;
                            }
                        }

                        <i class="@iconClass"></i>
                        @ViewBag.ScreenTitle
                    </div>
                    <div class="navbar-right">
                        <img src="~/Content/profile.png" alt="Profile" class="profile-img" onerror="this.onerror=null; this.src='https://www.w3schools.com/howto/img_avatar.png';" />
                        <a href="@Url.Action("Login", "Account")" class="btn-theme">
                            <i class="fas fa-sign-out-alt"></i>
                            Logout
                        </a>
                    </div>
                </div>

                <!-- This is where your page content will be rendered -->
                <div class="fade-in">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script>
        // Enhanced sidebar toggle with state persistence
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            const sidebar = document.getElementById('mainSidebar');
            sidebar.classList.toggle('collapsed');

            // Store state in memory for this session
            const isCollapsed = sidebar.classList.contains('collapsed');
            window.sidebarCollapsed = isCollapsed;
        });

        // Restore sidebar state on page load
        document.addEventListener('DOMContentLoaded', function () {
            // Restore from memory if available
            if (window.sidebarCollapsed) {
                document.getElementById('mainSidebar').classList.add('collapsed');
            }

            // Add fade-in animation to content
            document.querySelector('.content-inner').classList.add('fade-in');
        });

        // Smooth hover effects for navigation
        document.querySelectorAll('.sidebar nav a').forEach(link => {
            link.addEventListener('mouseenter', function () {
                if (!document.getElementById('mainSidebar').classList.contains('collapsed')) {
                    this.style.transform = 'translateX(6px)';
                }
            });

            link.addEventListener('mouseleave', function () {
                if (!this.classList.contains('active')) {
                    this.style.transform = 'translateX(0)';
                }
            });
        });

        // Enhanced button hover effects
        document.querySelectorAll('.btn-primary, .btn-theme').forEach(button => {
            button.addEventListener('mouseenter', function () {
                this.style.transform = 'translateY(-3px) scale(1.02)';
            });

            button.addEventListener('mouseleave', function () {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Airplane icon rotation effect for brand link
        const brandLink = document.querySelector('.brand-link');
        if (brandLink) {
            brandLink.addEventListener('click', function (e) {
                const airplaneIcon = this.querySelector('.airplane-icon');
                if (airplaneIcon && this.href && this.href !== window.location.href) {
                    // Add a quick spin effect before navigation
                    airplaneIcon.style.transform = 'rotate(360deg) scale(1.2)';
                    setTimeout(() => {
                        airplaneIcon.style.transform = 'rotate(0deg) scale(1)';
                    }, 400);
                }
            });
        }

        // Add floating animation to airplane icon when hovered
        document.querySelector('.airplane-icon')?.addEventListener('mouseenter', function () {
            if (!document.getElementById('mainSidebar').classList.contains('collapsed')) {
                this.style.animation = 'float 1s ease-in-out infinite';
            }
        });

        document.querySelector('.airplane-icon')?.addEventListener('mouseleave', function () {
            this.style.animation = 'none';
        });

        // Enhanced tooltips for collapsed sidebar
        document.querySelectorAll('.sidebar nav a').forEach(link => {
            link.addEventListener('mouseenter', function () {
                if (document.getElementById('mainSidebar').classList.contains('collapsed')) {
                    // Tooltip is handled by CSS, but we can add additional effects here
                    this.style.zIndex = '1002';
                }
            });

            link.addEventListener('mouseleave', function () {
                this.style.zIndex = 'auto';
            });
        });

        // Smooth transitions for sidebar collapse/expand
        const sidebar = document.getElementById('mainSidebar');
        const observer = new MutationObserver(function (mutations) {
            mutations.forEach(function (mutation) {
                if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                    const isCollapsed = sidebar.classList.contains('collapsed');
                    const airplaneIcon = sidebar.querySelector('.airplane-icon');

                    if (airplaneIcon) {
                        // Ensure smooth transition for airplane icon
                        if (isCollapsed) {
                            setTimeout(() => {
                                airplaneIcon.style.transform = 'rotate(-90deg)';
                            }, 100);
                        } else {
                            airplaneIcon.style.transform = 'rotate(0deg)';
                        }
                    }
                }
            });
        });

        observer.observe(sidebar, { attributes: true });

        // Add click effects to all navigation items
        document.querySelectorAll('.sidebar nav a').forEach(link => {
            link.addEventListener('click', function () {
                // Add a subtle click effect
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 150);
            });
        });

        // Performance optimization - debounce resize events
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // Handle responsive behavior
        const handleResize = debounce(() => {
            const sidebar = document.getElementById('mainSidebar');
            if (window.innerWidth <= 768) {
                sidebar.classList.add('collapsed');
            }
        }, 250);

        window.addEventListener('resize', handleResize);

        // Initialize responsive behavior
        if (window.innerWidth <= 768) {
            document.getElementById('mainSidebar').classList.add('collapsed');
        }

        // Add keyboard navigation support
        document.addEventListener('keydown', function (e) {
            // Toggle sidebar with Ctrl + B
            if (e.ctrlKey && e.key === 'b') {
                e.preventDefault();
                document.getElementById('sidebarToggle').click();
            }
        });

        // Preload important assets for better performance
        function preloadAssets() {
            const img = new Image();
            img.src = 'https://www.w3schools.com/howto/img_avatar.png';
        }

        // Initialize preloading
        preloadAssets();

        
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>